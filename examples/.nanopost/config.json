{
  "defaultType": "status",
  "editor": "code --wait",
  "postTypes": {
    "status": {
      "contentDir": "content/status",
      "dateFormat": "yyyy-MM-dd",
      "filename": {
        "format": "date-slug",
        "maxSlugLength": 60
      },
      "frontmatter": {
        "defaults": {
          "status": "note"
        }
      }
    }
  },
  "plugins": [
    {
      "name": "github",
      "enabled": true
    }
  ]
}
